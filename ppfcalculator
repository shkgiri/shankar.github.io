<body>
    <div class="container">
        <h1>PPF Return Calculator</h1>

        <label for="principal">Principal Amount:</label>
        <input type="number" id="principal" value="100000" min="1">

        <label for="years">Number of Years:</label>
        <input type="number" id="years" value="15" min="1">

        <button onclick="calculatePPF()">Calculate</button>

        <div id="result"></div>

        <script>
            function calculatePPF() {
                let principal = parseFloat(document.getElementById('principal').value);
                let years = parseInt(document.getElementById('years').value);
                let interestRate = 0.075; // Current PPF interest rate (subject to change)

                let amount = principal * Math.pow((1 + interestRate), years);
                let maturityValue = amount.toFixed(2);

                document.getElementById('result').innerHTML = `Maturity Value: â‚¹${maturityValue}`;
            }
        </script>
    </div>
